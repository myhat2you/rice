#!/bin/sh

tmpfile="$(ls /tmp/alert-* 2> /dev/null)"
output="$(date '+%d/%m/%y (%a) %I:%M%p')"

[[ -f $tmpfile ]] && output="$(cat $tmpfile) | $(date +%I:%M%p)"

case $BUTTON in
	1) notify-send "This Month" "$(cal --color=never)" && notify-send "Appointments" "$(calcurse -d3)" ;;
esac

echo -e " $output"
